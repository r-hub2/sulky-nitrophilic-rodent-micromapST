citHeader("To cite package 'stateMicromaps' renamed 'micromapST'
in publications use: Daniel B. Carr and Linda Williams Pickle, 
Visualizing Data Patterns with Micromaps, CRC Press, 2010.")

## R >= 3.0.0 passes package metadata to citation().

if(!exists("meta") || is.null(meta)) meta <- packageDescription("micromapST")
       
  year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
  vers <- paste("R package version", meta$Version)
  
  bibentry(bibtype="Book",
     title  = "Visualizing Data Patterns with Micromaps",
     author = c(person("Daniel B. Carr"),
                person("Linda Williams Pickle"),
                person("micromapST Author Team")),
     year = "2010",
     publisher = "CRC Press",
     isdn = "978-1420075731",
     textVersion =
       paste0("Daniel B. Carr and Linda Williams Pickle (2010), ",
              "Visualizing Data Patterns with Micromaps")
  )

  bibentry(bibtype="Article",
     title = "micromapST: Exploring and Communicating Geospatial Patterns in U. S. State Data",
     author = c(person("Linda Williams Pickle"),
                person("James B. Pearson, Jr"),
                person("Daniel B. Carr"),
                person("micromapST Author Team")),
     year  = "2014",
     journal = "Journal of Statistical Software",
     url   = "https://CRAN.R-project.org/package=micromapST",
     key   = "micromapST-package",
     textVersion =
       paste0("Linda Williams Pickle, James B. Pearson, Jr. and Daniel B. Carr (2014), ",
       "micromapST: Exploring and Communicating Geospatial Patterns in U. S. State Data")
  )


